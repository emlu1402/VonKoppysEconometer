@{
    ViewData["Title"] = "Lägg till användare";
}
<h3>@ViewData["Title"]</h3>
<form asp-controller="User" asp-action="Add">
    <label>Namn</label><br>
    <input name="Name"><br>
    <br>
    <label>Epost</label><br>
    <input name="Email"><br>
    <br>
    <label>Lösenord</label><br>
    <input name="PasswordClearText" id="PasswordClearText" type="text"><br>
    <br>
    <label>Roll</label><br>
    <select class="form-control" name="AccountID">
        @foreach(var item in Model.Accounts)
            {
                if(item.Type != "Borttagen")
                {
                <option value="@item.AccountID">@item.Type</option>
                }
            } 
    </select>
    <br>
    <input type="submit" class="btn btn-default" value="Lägg till användare">
    <br>
    <br>
    <br>
    <br>

</form>